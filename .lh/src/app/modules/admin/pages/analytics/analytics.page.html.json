            "content": "<ion-header [translucent]=\"true\">\r\n  <ion-toolbar color=\"primary\">\r\n    <ion-buttons slot=\"start\">\r\n      <ion-back-button defaultHref=\"/admin/dashboard\"></ion-back-button>\r\n    </ion-buttons>\r\n    <ion-title>Platform Analytics</ion-title>\r\n  </ion-toolbar>\r\n</ion-header>\r\n\r\n<ion-content [fullscreen]=\"true\" class=\"ion-padding\">\r\n  @if (loading) {\r\n    <div class=\"loading-container\">\r\n      <ion-spinner name=\"crescent\"></ion-spinner>\r\n      <p>Loading analytics...</p>\r\n    </div>\r\n  } @else {\r\n    <!-- Statistics Cards -->\r\n    <ion-grid>\r\n      <ion-row>\r\n        <ion-col size=\"6\" size-md=\"3\">\r\n          <ion-card color=\"primary\">\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"people-outline\" class=\"stat-icon\"></ion-icon>\r\n              <h2>{{ stats.totalUsers }}</h2>\r\n              <p>Total Users</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n        \r\n        <ion-col size=\"6\" size-md=\"3\">\r\n          <ion-card color=\"secondary\">\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"cube-outline\" class=\"stat-icon\"></ion-icon>\r\n              <h2>{{ stats.totalProducts }}</h2>\r\n              <p>Active Products</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n        \r\n        <ion-col size=\"6\" size-md=\"3\">\r\n          <ion-card color=\"tertiary\">\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"cart-outline\" class=\"stat-icon\"></ion-icon>\r\n              <h2>{{ stats.totalOrders }}</h2>\r\n              <p>Total Orders</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n        \r\n        <ion-col size=\"6\" size-md=\"3\">\r\n          <ion-card color=\"success\">\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"cash-outline\" class=\"stat-icon\"></ion-icon>\r\n              <h2>â‚±{{ stats.totalRevenue.toFixed(2) }}</h2>\r\n              <p>Total Revenue</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n      </ion-row>\r\n      \r\n      <!-- Today's Stats -->\r\n      <ion-row>\r\n        <ion-col size=\"6\">\r\n          <ion-card>\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"today-outline\" class=\"stat-icon\" color=\"warning\"></ion-icon>\r\n              <h2>{{ stats.ordersToday }}</h2>\r\n              <p>Orders Today</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n        \r\n        <ion-col size=\"6\">\r\n          <ion-card>\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"trending-up-outline\" class=\"stat-icon\" color=\"success\"></ion-icon>\r\n              <h2>â‚±{{ stats.revenueToday.toFixed(2) }}</h2>\r\n              <p>Revenue Today</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n      </ion-row>\r\n      \r\n      <ion-row>\r\n        <ion-col size=\"12\" size-md=\"6\">\r\n          <ion-card>\r\n            <ion-card-content class=\"stat-card\">\r\n              <ion-icon name=\"hourglass-outline\" class=\"stat-icon\" color=\"warning\"></ion-icon>\r\n              <h2>{{ stats.pendingProducts }}</h2>\r\n              <p>Pending Products</p>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n      </ion-row>\r\n    </ion-grid>\r\n\r\n    <!-- Charts -->\r\n    <ion-grid>\r\n      <ion-row>\r\n        <!-- Sales Chart -->\r\n        <ion-col size=\"12\" sizeMd=\"6\">\r\n          <ion-card class=\"chart-card\">\r\n            <ion-card-header>\r\n              <ion-card-title>ðŸ“ˆ Sales Trend (Last 7 Days)</ion-card-title>\r\n            </ion-card-header>\r\n            <ion-card-content class=\"chart-content\">\r\n              <div class=\"chart-wrapper\">\r\n                <canvas #salesChart id=\"salesChart\"></canvas>\r\n              </div>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n\r\n        <!-- Category Chart -->\r\n        <ion-col size=\"12\" sizeMd=\"6\">\r\n          <ion-card class=\"chart-card\">\r\n            <ion-card-header>\r\n              <ion-card-title>ðŸ“Š Products by Category</ion-card-title>\r\n            </ion-card-header>\r\n            <ion-card-content class=\"chart-content\">\r\n              <div class=\"chart-wrapper\">\r\n                <canvas #categoryChart id=\"categoryChart\"></canvas>\r\n              </div>\r\n            </ion-card-content>\r\n          </ion-card>\r\n        </ion-col>\r\n      </ion-row>\r\n    </ion-grid>\r\n\r\n    <!-- Recent Orders -->\r\n    <ion-card>\r\n      <ion-card-header>\r\n        <ion-card-title>Recent Orders</ion-card-title>\r\n      </ion-card-header>\r\n      <ion-card-content>\r\n        @if (recentOrders.length === 0) {\r\n          <p class=\"ion-text-center\">No orders yet</p>\r\n        } @else {\r\n          <ion-list>\r\n            @for (order of recentOrders; track order.orderId) {\r\n              <ion-item>\r\n                <ion-label>\r\n                  <h3>Order #{{ order.orderId?.substring(0, 8) }}</h3>\r\n                  <p>{{ order.customerName }} â†’ {{ order.sellerName }}</p>\r\n                  <p>â‚±{{ order.totalPrice.toFixed(2) }}</p>\r\n                </ion-label>\r\n                <ion-badge [color]=\"order.status === 'completed' ? 'success' : order.status === 'cancelled' ? 'danger' : 'warning'\" slot=\"end\">\r\n                  {{ order.status }}\r\n                </ion-badge>\r\n              </ion-item>\r\n            }\r\n          </ion-list>\r\n        }\r\n      </ion-card-content>\r\n    </ion-card>\r\n  }\r\n</ion-content>\r\n"
